---
ip: "192.168.10.10"
memory: 2048
cpus: 1
provider: virtualbox

authorize: ~/.ssh/id_rsa.pub

keys:
    - ~/.ssh/id_rsa

folders:
    - map: ~/dev-area/libroot
      to: /home/vagrant/libroot

sites:
    - map: libroot.app
      to: /home/vagrant/libroot/www/public

databases:
    - libroot

